<div class="container">
  <div class="h1-your-new-buy">
    <h1 class="your-new-buy"> Votre nouvel achat</h1>
  </div>
  <div class="parent-form-new-buy">
    <div class="form-new-buy">
      <%= form_for([@phone, @buy]) do |f| %>
      <%= f.label :phone_price %>
      <%= f.text_field :phone_price %>
      <%= f.label :delivery_date %>
      <%= f.text_field :delivery_date %>
      <%= f.label :accessories %>
      <%= f.select(:accessories, Buy::LIST_ACCESSORIES) %>
      <%= f.label :warranty %>
      <%= f.select(:warranty, Buy::LIST_WARRANTY) %>
      <%= f.submit %>
      <% end %>
    </div>
  </div>
</div>
