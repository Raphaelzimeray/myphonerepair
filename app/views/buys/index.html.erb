<div class="container">
  <div class="h1-buys-index-parent">
    <h1 class="buys-index-h1"> Voici vos achats </h1>
  </div>

  <div class="parent-div-buy">
      <div class="div-buy">
        <% @buys.each do |buy| %>
          <div class="buy-div-child">
            <div class="description-buy">
              <p> Date de livraison: <%= buy.delivery_date.strftime('%d-%m-%Y') %></p>
              <p> Accessoires du téléphone: <%= buy.accessories %> </p>
            </div>
            <div class="photo-reservation">
              <%= cl_image_tag buy.phone.photo.key, class:"phone-photo-index-buy" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
</div>
